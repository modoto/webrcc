<section class="content-header">
  <div class="container-fluid d-flex justify-content-between align-items-center">
    <h1>Users</h1>
    <a href="/users/create" class="btn btn-primary">Add Users</a>
  </div>
</section>

<section class="content mt-3">
  <div class="card">
    <div class="card-body">
      <table id="example2" class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>User Id</th>
            <th>Username</th>
            <th>Display Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Status</th>
            <th width="120">Action</th>
          </tr>
        </thead>
        <tbody>
          <% rows.forEach(row=> { %>
            <tr>
              <td>
                <%= row.id %>
              </td>
              <td>
                <%= row.user_id %>
              </td>
              <td>
                <%= row.username %>
              </td>
              <td>
                <%= row.display_name %>
              </td>
              <td>
                <%= row.email %>
              </td>
              <td>
                <%= row.roles %>
              </td>
              <td>
                <% if(row.status==1){ %>
                  <span class="badge badge-success">Active</span>
                  <% } else { %>
                    <span class="badge badge-danger">Inactive</span>
                    <% } %>
              </td>

              <td width="130">
                <a href="/users/edit/<%= row.id %>" class="btn btn-warning btn-sm">
                  <i class="fas fa-edit"></i>
                </a>

                <a href="/users/delete/<%= row.id %>" onclick="return confirm('Delete this vehicle?')"
                  class="btn btn-danger btn-sm">
                  <i class="fas fa-trash"></i>
                </a>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</section>