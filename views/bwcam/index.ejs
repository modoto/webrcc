<section class="content-header">
  <div class="container-fluid d-flex justify-content-between align-items-center">
    <h1>BW Camera</h1>
    <a href="/bwcam/create" class="btn btn-primary">Add BW Camera</a>
  </div>
</section>

<section class="content mt-3">
  <div class="card">
    <div class="card-body">
      <table id="example2" class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>BWCam ID</th>
            <th>Device Name</th>
            <th>IP</th>
            <th>Status</th>
            <th width="120">Action</th>
          </tr>
        </thead>
        <tbody>
          <% rows.forEach(row=> { %>
            <tr>
              <td>
                <%= row.id %>
              </td>
              <td>
                <%= row.bwcam_id %>
              </td>
              <td>
                <%= row.device_name %>
              </td>
              <td>
                <%= row.ip_address %>
              </td>
              <td>
                <% if(row.status==1){ %>
                  <span class="badge badge-success">Active</span>
                  <% } else { %>
                    <span class="badge badge-danger">Inactive</span>
                    <% } %>
              </td>

              <td width="130">
                <a href="/bwcam/edit/<%= row.id %>" class="btn btn-warning btn-sm">
                  <i class="fas fa-edit"></i>
                </a>

                <a href="/bwcam/delete/<%= row.id %>" onclick="return confirm('Delete this vehicle?')"
                  class="btn btn-danger btn-sm">
                  <i class="fas fa-trash"></i>
                </a>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</section>