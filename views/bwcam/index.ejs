<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>BW Camera List</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">BW Camera</li>
        </ol>
      </div>
    </div>
  </div>
</section>

<section class="content mt-3">
  <div class="card">
    <div class="card-header">
      <a href="/bwcam/create" class="btn btn-primary btn-sm">
        <i class="fas fa-plus"></i> Add BW Camera
      </a>

      <div class="card-tools">
        <button type="button" class="btn btn-tool" data-card-widget="collapse">
          <i class="fas fa-minus"></i>
        </button>
        <button type="button" class="btn btn-tool" data-card-widget="remove">
          <i class="fas fa-times"></i>
        </button>
      </div>
    </div>

    <div class="card-body">
      <table id="example2" class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>BWCam ID</th>
            <th>Device Name</th>
            <th>IP</th>
            <th>Status</th>
            <th width="120">Action</th>
          </tr>
        </thead>
        <tbody>
          <% rows.forEach(row=> { %>
            <tr>
              <td>
                <%= row.id %>
              </td>
              <td>
                <%= row.bwcam_id %>
              </td>
              <td>
                <%= row.device_name %>
              </td>
              <td>
                <%= row.ip_address %>
              </td>
              <td>
                <% if(row.status==1){ %>
                  <span class="badge badge-success">Active</span>
                  <% } else { %>
                    <span class="badge badge-danger">Inactive</span>
                    <% } %>
              </td>

              <td width="130">
                <a href="/bwcam/edit/<%= row.id %>" class="btn btn-warning btn-sm">
                  <i class="fas fa-edit"></i>
                </a>

                <a href="/bwcam/delete/<%= row.id %>" onclick="return confirm('Delete this vehicle?')"
                  class="btn btn-danger btn-sm">
                  <i class="fas fa-trash"></i>
                </a>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</section>