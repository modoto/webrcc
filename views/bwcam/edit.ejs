<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Edit BW Camera</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">Edit BW Camera</li>
        </ol>
      </div>
    </div>
  </div>
</section>

<section class="content">
  <div class="container-fluid mt-3">
    <div class="card card-default">

      <div class="card-header">
        <h4>BW Camera Form</h4>
      </div>

      <div class="card-body">

        <form method="POST" action="/bwcam/edit/<%= row.id %>">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>BWCam ID</label>
                <input type="text" class="form-control" name="bwcam_id" 
                value="<%= row.bwcam_id %>">
              </div>

              <div class="form-group">
                <label>Device Name</label>
                <input type="text" class="form-control" name="device_name" 
                value="<%= row.device_name %>">
              </div>

              <div class="form-group">
                <label>Model</label>
                <input type="text" class="form-control" name="model" 
                value="<%= row.model %>">
              </div>

              <div class="form-group">
                <label>Item No</label>
                <input type="text" class="form-control" name="item_no" 
                value="<%= row.item_no %>">
              </div>

              <div class="form-group">
                <label>Serial Number</label>
                <input type="text" class="form-control" name="serial_number" 
                value="<%= row.serial_number %>">
              </div>

            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label>Power</label>
                <input type="text" class="form-control" name="power" 
                value="<%= row.power %>">
              </div>

              <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" name="username" 
                value="<%= row.username %>">
              </div>

              <div class="form-group">
                <label>Password</label>
                <input type="text" class="form-control" name="password" 
                value="<%= row.password %>">
              </div>

              <div class="form-group">
                <label>Status</label>
                <select class="form-control" name="status">
                  <option value="1" <%= row.status == 1 ? "selected" : "" %>>Active</option>
                  <option value="0" <%= row.status == 0 ? "selected" : "" %>>Inactive</option>
                </select>
              </div>

              <input type="hidden" name="user_id" value="USR001">

            </div>

          </div>

          <hr>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>IP Address</label>
                <input type="text" class="form-control" name="ip_address" 
                value="<%= row.ip_address %>">
              </div>

              <div class="form-group">
                <label>MAC Address</label>
                <input type="text" class="form-control" name="mac_address" 
                value="<%= row.mac_address %>">
              </div>
              
              <div class="form-group">
                <label>Server Stream URL</label>
                <input type="text" name="stream_url" class="form-control" value="<%= row.stream_url %>">
              </div>

              <div class="form-group">
                <label>RTSP URL</label>
                <input type="text" class="form-control" name="rtsp_url" 
                value="<%= row.rtsp_url %>">
              </div>

              <div class="form-group">
                <label>RTSP Port</label>
                <input type="number" class="form-control" name="rtsp_port" 
                value="<%= row.rtsp_port %>">
              </div>

              <div class="form-group">
                <label>RTSP Username</label>
                <input type="text" class="form-control" name="rtsp_username" 
                value="<%= row.rtsp_username %>">
              </div>

              <div class="form-group">
                <label>RTSP Password</label>
                <input type="text" class="form-control" name="rtsp_password" 
                value="<%= row.rtsp_password %>">
              </div>

            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label>FFMPEG Options</label>
                <textarea rows="8" class="form-control" name="ffmpeg_options"><%= row.ffmpeg_options %></textarea> 
              </div>
              <div class="form-group">
                <label>Max Retries</label>
                <input type="number" class="form-control" name="max_retries" 
                value="<%= row.max_retries %>">
              </div>
              <div class="form-group">
                <label>Retry delay</label>
                <input type="number" class="form-control" name="retry_delay" 
                value="<%= row.retry_delay %>">
              </div>
              <div class="form-group">
                <label>Watchdog Timeout</label>
                <input type="number" class="form-control" name="watchdog_timeout" 
                value="<%= row.watchdog_timeout %>">
              </div>
              <div class="form-group">
                <label>Watchdog Check Interval</label>
                <input type="number" class="form-control" name="watchdog_check_interval" 
                value="<%= row.watchdog_check_interval %>">
              </div>

            </div>

          </div>

          <button type="submit" class="btn btn-success">Save</button>
          <a href="/bwcam" class="btn btn-secondary">Back</a>
        </form>

      </div>

    </div>
  </div>
</section>
