<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create Router</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Create Router</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid mt-3">
        <div class="card card-default">
            <div class="card-header">
                <h4>Router Form</h4>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>

            <div class="card-body">
                <form method="POST" action="/router/create">

                    <div class="row">
                        <div class="col-md-6">

                            <div class="form-group">
                                <label>Router ID</label>
                                <input type="text" class="form-control" name="router_id" value="RT-" required>
                            </div>

                            <div class="form-group">
                                <label>Device Name</label>
                                <input type="text" class="form-control" name="device_name" value="TELETONIKA" required>
                            </div>

                            <div class="form-group">
                                <label>Model</label>
                                <input type="text" class="form-control" name="model" value="RUT906">
                            </div>

                            <div class="form-group">
                                <label>Item No</label>
                                <input type="text" class="form-control" name="item_no">
                            </div>

                            <div class="form-group">
                                <label>Serial Number</label>
                                <input type="text" class="form-control" name="serial_number" value="6006864604">
                            </div>

                            <div class="form-group">
                                <label>IP Address</label>
                                <input type="text" class="form-control" name="ip_address" placeholder="192.168.1.1">
                            </div>

                        </div>

                        <div class="col-md-6">

                            <div class="form-group">
                                <label>MAC Address</label>
                                <input type="text" class="form-control" name="mac_address" value="20:97:27:8A:3F:68">
                            </div>

                            <div class="form-group">
                                <label>Power</label>
                                <input type="text" class="form-control" name="power" placeholder="12V / 220V" value="12 Volt">
                            </div>

                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" class="form-control" name="username" value="admin">
                            </div>

                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control" name="password" value="P@ssword">
                            </div>

                            <div class="form-group">
                                <label>Status</label>
                                <select class="form-control" name="status">
                                    <option value="1">Active</option>
                                    <option value="0">Inactive</option>
                                </select>
                            </div>

                            <input type="hidden" name="user_id" value="USR001">

                        </div>
                    </div>

                    <button type="submit" class="btn btn-success">Save</button>
                    <a href="/router" class="btn btn-secondary">Back</a>

                </form>
            </div>
        </div>
    </div>
</section>
