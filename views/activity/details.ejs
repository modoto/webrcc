                                <div class="canvas-wrapper" style="position: relative; width: 100%;">
                                    <div id="cameraMTC1" class="camera-name">UNIT-01 MTC</div>
                                    <div class="camera-expand">
                                        <a href="#" onclick="toggleRecording('videoCanvas1');return false;"><i
                                                class="fas fa-video text-white mr-2"></i></a>
                                        <a href="#" onclick="expandCanvasFullscreen('videoCanvas1');return false;"><i
                                                class="fas fa-expand-arrows-alt text-white"></i></a>
                                    </div>
                                    <canvas id="videoCanvas1" class="img-fluid"></canvas>
                                    <div id="recordIndicator1" class="record-indicator d-none">● REC</div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="canvas-wrapper" style="position: relative;">
                                    <div id="cameraBWC1" class="camera-name">UNIT-01 BWC</div>
                                    <div class="camera-expand">
                                        <a href="#" onclick="toggleRecording('videoCanvas2');return false;"><i
                                                class="fas fa-video text-white mr-2"></i></a>
                                        <a href="#" onclick="expandCanvasFullscreen('videoCanvas2');return false;"><i
                                                class="fas fa-expand-arrows-alt text-white"></i></a>
                                    </div>
                                    <canvas id="videoCanvas2" class="img-fluid"></canvas>
                                    <div id="recordIndicator2" class="record-indicator d-none">● REC</div>
