<!-- Content Header (Page header) -->
<section class="content-header" style="background-color: #323232;">

</section>

<!-- Main content -->
<section class="content" style="background-color: #323232;">

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 mb-2">
                <div class="card" style="background-color: #18261C;">
                    <div class="card-header">
                        <h5 class="text-white">#<%= row.activity_id %> - <%= row.activity_name %>
                        </h5>
                    </div>
                    <div class="card-body scrollable-card-body">
                        <div class="row" id="container-cctv">
