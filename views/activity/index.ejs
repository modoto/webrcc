<section class="content-header">
  <div class="container-fluid">
    <h1>Activity List</h1>
  </div>
</section>

<section class="content mt-3">
      <div class="card">
        <div class="card-header">
          <a href="/activity/create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> New Activity
          </a>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
              <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
              <i class="fas fa-times"></i>
            </button>
          </div>
        </div>

        <div class="card-body table-responsive">
          <table id="example2" class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>Activity ID</th>
                <th>Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Personnel</th>
                <th>Status</th>
                <th>#</th>
              </tr>
            </thead>
            <tbody>
              <% rows.forEach(row=> { %>
                <tr>
                  <td>
                    <%= row.activity_id %>
                  </td>
                  <td>
                    <%= row.activity_name %>
                  </td>
                  <td>
                    <%= row.start_date %>
                  </td>
                  <td>
                    <%= row.end_date %>
                  </td>
                  <td>
                    <%= row.personnel %>
                  </td>
                  <td>
                    <% if(row.status==1){ %>
                      <span class="badge badge-success">Active</span>
                      <% } else { %>
                        <span class="badge badge-danger">Inactive</span>
                    <% } %>
                  </td>
                  <td width="200" class="text-center">
                    <a target="_blank" rel="noopener noreferrer" href="/activity/details/<%= row.activity_id %>"
                      class="btn btn-success btn-sm">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a target="_blank" rel="noopener noreferrer" href="/maps/groups/<%= row.activity_id %>"
                      class="btn btn-success btn-sm">
                      <i class="fas fa-map"></i>
                    </a>
                    <a href="/maps/activity/<%= row.id %>" class="btn btn-info btn-sm">
                      <i class="fas fa-video"></i>
                    </a>
                    <a href="/activity/edit/<%= row.id %>" class="btn btn-warning btn-sm">
                      <i class="fas fa-edit"></i>
                    </a>

                    <a href="/activity/delete/<%= row.id %>" onclick="return confirm('Delete this vehicle?')"
                      class="btn btn-danger btn-sm">
                      <i class="fas fa-trash"></i>
                    </a>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </div>
</section>