<section class="content">
  <div class="container-fluid mt-3">

    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Edit Vehicle</h3>
      </div>

      <form action="/vehicle/edit/<%= row.id %>" method="POST">
        <div class="card-body">

          <div class="row">

            <div class="col-lg-4">
              <div class="form-group">
                <label>Vehicle ID</label>
                <input name="vehicle_id" class="form-control" value="<%= row.vehicle_id %>">
              </div>
            </div>

            <div class="col-lg-4">
              <div class="form-group">
                <label>Police Number</label>
                <input name="police_number" class="form-control" value="<%= row.police_number %>">
              </div>
            </div>

            <div class="col-lg-4">
              <div class="form-group">
                <label>Brand</label>
                <input name="brand" class="form-control" value="<%= row.brand %>">
              </div>
            </div>

          </div>

          <!-- ROW 2 -->
          <div class="row">

            <div class="col-md-4">
              <div class="form-group">
                <label>Model</label>
                <input name="model" class="form-control" value="<%= row.model %>">
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label>Assembly Year</label>
                <input name="assembly_year" class="form-control" value="<%= row.assembly_year %>">
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label>Color</label>
                <input name="color" class="form-control" value="<%= row.color %>">
              </div>
            </div>

          </div>

          <!-- ROW 3 -->
          <div class="row">

            <div class="col-md-4">
              <div class="form-group">
                <label>Horse Power</label>
                <input name="horse_power" class="form-control" value="<%= row.horse_power %>">
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label>Chassis Number</label>
                <input name="chassis_number" class="form-control" value="<%= row.chassis_number %>">
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label>Machine Number</label>
                <input name="machine_number" class="form-control" value="<%= row.machine_number %>">
              </div>
            </div>

          </div>

          <!-- ROW 4 -->
          <div class="row">

            <div class="col-md-4">
              <div class="form-group">
                <label>Coding</label>
                <input type="number" name="coding" class="form-control" value="<%= row.coding %>">
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label>BPKB Number</label>
                <input name="bpkb_number" class="form-control" value="<%= row.bpkb_number %>">
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label>Fuel</label>
                <input name="fuel" class="form-control" value="<%= row.fuel %>">
              </div>
            </div>

          </div>

          <!-- ROW 5 -->
          <div class="row">

            <div class="col-md-4">
              <div class="form-group">
                <label>Weight</label>
                <input type="number" name="weight" class="form-control" value="<%= row.weight %>">
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label>Volume (mÂ³)</label>
                <input type="number" step="0.01" name="volume_m3" class="form-control" value="<%= row.volume_m3 %>">
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label>Status</label>
                <select class="form-control" name="status">
                  <option value="1" <%= row.status == 1 ? "selected" : "" %>>Active</option>
                  <option value="0" <%= row.status == 0 ? "selected" : "" %>>Inactive</option>
                </select>
              </div>
            </div>

          </div>

        </div>

        <div class="card-footer">
          <button class="btn btn-primary">Save</button>
          <a href="/vehicle" class="btn btn-secondary">Cancel</a>
        </div>

      </form>
    </div>

  </div>
</section>
