<section class="content-header">
  <div class="container-fluid d-flex justify-content-between align-items-center">
    <h1>Tablet</h1>
  </div>
</section>

<section class="content mt-3">
  <div class="card">
    <div class="card-header">
      <a href="/tablet/create" class="btn btn-primary btn-sm">
        <i class="fas fa-plus"></i> Add Tablet
      </a>

      <div class="card-tools">
        <button type="button" class="btn btn-tool" data-card-widget="collapse">
          <i class="fas fa-minus"></i>
        </button>
        <button type="button" class="btn btn-tool" data-card-widget="remove">
          <i class="fas fa-times"></i>
        </button>
      </div>
    </div>

    <div class="card-body table-responsive">
      <table id="example2" class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Tab ID</th>
            <th>Device Name</th>
            <th>IP Address</th>
            <th>MAC Address</th>
            <th>Status</th>
            <th width="120">Action</th>
          </tr>
        </thead>
        <tbody>
          <% rows.forEach(row=> { %>
            <tr>
              <td>
                <%= row.id %>
              </td>
              <td>
                <%= row.tab_id %>
              </td>
              <td>
                <%= row.device_name %>
              </td>
              <td>
                <%= row.ip_address %>
              </td>
              <td>
                <%= row.mac_address %>
              </td>
              <td>
                <% if(row.status==1){ %>
                  <span class="badge badge-success">Active</span>
                  <% } else { %>
                    <span class="badge badge-danger">Inactive</span>
                    <% } %>
              </td>
              <td width="130">
                <a href="/tablet/edit/<%= row.id %>" class="btn btn-warning btn-sm">
                  <i class="fas fa-edit"></i>
                </a>

                <a href="/tablet/delete/<%= row.id %>" onclick="return confirm('Delete this vehicle?')"
                  class="btn btn-danger btn-sm">
                  <i class="fas fa-trash"></i>
                </a>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</section>