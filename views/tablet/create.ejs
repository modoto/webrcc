<section class="content-header">
  <div class="container-fluid">
    <h1>Add Tablet</h1>
  </div>
</section>

<section class="content">
  <div class="container-fluid mt-3">
    <div class="card">
      <div class="card-header"><h4>Tablet Form</h4></div>

      <div class="card-body">
        <form method="POST" action="/tablet/create">
          <div class="row">

            <!-- LEFT SIDE -->
            <div class="col-md-6">
              <div class="form-group">
                <label>Tab ID</label>
                <input type="text" name="tab_id" class="form-control" value="TAB-0">
              </div>

              <div class="form-group">
                <label>Device Name</label>
                <input type="text" name="device_name" class="form-control" value="Samsung Galaxy Tab S10">
              </div>

              <div class="form-group">
                <label>Model</label>
                <input type="text" name="model" class="form-control" value="Samsung Galaxy Tab S10 Plus Wi-Fi 12/256GB">
              </div>

              <div class="form-group">
                <label>Item No</label>
                <input type="text" name="item_no" class="form-control" value="ITM001254648">
              </div>

              <div class="form-group">
                <label>Serial Number</label>
                <input type="text" name="serial_number" class="form-control" value="SN362892389727">
              </div>
            </div>

            <!-- RIGHT -->
            <div class="col-md-6">
              <div class="form-group">
                <label>IP Address</label>
                <input type="text" name="ip_address" class="form-control">
              </div>

              <div class="form-group">
                <label>MAC Address</label>
                <input type="text" name="mac_address" class="form-control" value="">
              </div>

              <div class="form-group">
                <label>Power</label>
                <input type="text" name="power" class="form-control" value="5 Volt">
              </div>

              <div class="form-group">
                <label>Username</label>
                <input type="text" name="username" class="form-control" value="admin">
              </div>

              <div class="form-group">
                <label>Password</label>
                <input type="text" name="password" class="form-control" value="P@ssw0rd">
              </div>

              <div class="form-group">
                <label>Status</label>
                <select name="status" class="form-control">
                  <option value="1">Active</option>
                  <option value="0">Inactive</option>
                </select>
              </div>

              <input type="hidden" name="user_id" value="USR001">
            </div>
          </div>

          <button class="btn btn-success" type="submit">Save</button>
          <a href="/tablet" class="btn btn-secondary">Back</a>
        </form>
      </div>
    </div>
  </div>
</section>
